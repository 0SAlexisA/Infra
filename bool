	switch(selec){
		
		case 1:

	if(aUnam == false && carrera == false && grupo == false){
		}else{
			printf("Wey ni te topo");}
	
		if(aUnam == true && carrera == false && grupo == false){
			}else{
				printf("Pos eres de la UNAM pero quien sabe de donde");}
	
			if(aUnam == true && carrera == true && grupo == false){
				}else{
					printf("Eres alumno de la UNAM, en la carrera 308 y per no perteneces al 2296");}
	
				if(aUnam == true && carrera == true && grupo == true){
					}else{
						printf("Eres un informatico y no tienes vida");}
						
					}

	}while  (selec!=1);
