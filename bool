				if(aUnam == true && carrera == true && grupo == true){
					}else{
						printf("Eres un informatico y no tienes vida");}
						
					}

	}while  (selec!=1);
	return 0;
	}
	}break;
	
	
    case 2:;{	

		printf("\n", opcion);
		{
	do
	{
		printf(" Ingrese Que Desea Obtener:\n1)and\n");
		scanf("%i",&selec);
